package methods;

import java.util.*;

/**
 *
 * @author S338968126
 */
public class Methods {
    
     public static int getword(String userinput){
        System.out.print (userinput);
        Scanner input = new Scanner(System.in);
        int value;
        while (true){
            try{
                value=input.nextInt();
                break;
            }
            catch (InputMismatchException err){
                input.next();
                System.out.print("Incorrect character");
            }
        }
        return value;    
    } 
}   

